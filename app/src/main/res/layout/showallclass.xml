<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETAILS"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/llshowfield1"
            android:layout_marginBottom="50dp"
            android:textSize="24sp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="CLASS NAME"
                android:textColor="@android:color/holo_red_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/etshowclassname"
                android:layout_marginTop="100dp"
                android:ems="15"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:id="@+id/llshowfield1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET 1"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_green_dark"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SET NAME"
            android:ems="15"
            android:id="@+id/etshowfldname1"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SET DISCOUNT"
            android:ems="15"
            android:id="@+id/etshowflddis1"
            android:inputType="textPersonName"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llshowfield1"
        android:layout_marginTop="40dp"
        android:id="@+id/llshowfield2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET 2"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_green_dark"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SET NAME"
            android:ems="15"
            android:id="@+id/etshowfldname2"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SET DISCOUNT"
            android:ems="15"
            android:id="@+id/etshowflddis2"
            android:inputType="textPersonName"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llshowfield2"
        android:layout_marginTop="50dp"
        android:id="@+id/llshowfield3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET 3"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_green_dark"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SET NAME"
            android:ems="15"
            android:id="@+id/etshowfldname3"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="SET DISCOUNT"
            android:ems="15"
            android:id="@+id/etshowflddis3"
            android:inputType="textPersonName"/>
    </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btupdateclassname"
        android:layout_marginBottom="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Name"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="24sp"
        android:id="@+id/bcschname"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Purchase"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 000000"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/textviewlayout"
            android:padding="8dp"
            android:id="@+id/bcnetpuramt"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Sale"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 000000"
            android:textColor="@android:color/holo_green_light"
            android:textSize="20sp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/textviewlayout"
            android:padding="8dp"
            android:id="@+id/bcnetsaleamt"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Left"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 000000"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20sp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/textviewlayout"
            android:padding="8dp"
            android:id="@+id/bcnetprofitamt"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>